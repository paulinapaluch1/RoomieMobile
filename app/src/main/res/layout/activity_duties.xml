<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#F7F6F6"
    tools:context=".DutiesActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dc003a"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:background="#dc003a"
                android:drawableStart="@drawable/back32"
                android:scaleX="1.3"
                android:scaleY="1.3" />

            <Button
                android:id="@+id/logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginEnd="24dp"
                android:adjustViewBounds="true"
                android:background="#dc003a"
                android:drawableStart="@drawable/exit"
                android:scaleX="1.7"
                android:scaleY="1.7" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <TextView
        android:id="@+id/duty"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="Obowiązki"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/hall_duties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Wytrzyj kurze \nOdkurz \nUmyj podłogę"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hall" />

    <TextView
        android:id="@+id/kitchen_duties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Wytrzyj blaty \nZmyj naczynia \nUmyj toaletę \nWyrzuć śmieci \nZdezynfekuj blaty \nOdkurz \nZmyj podłogę"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchen" />

    <TextView
        android:id="@+id/bathroom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Łazienka"
        android:textAlignment="center"
        android:textColor="#dc003a"
        android:textSize="25dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchen_duties" />

    <TextView
        android:id="@+id/kitchen"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Kuchnia"
        android:textAlignment="center"
        android:textColor="#dc003a"
        android:textSize="25dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duty" />

    <TextView
        android:id="@+id/hall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Korytarz"
        android:textAlignment="center"
        android:textColor="#dc003a"
        android:textSize="25dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bathroom_duties" />

    <TextView
        android:id="@+id/bathroom_duties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Wytrzyj kurze \nOdkurz \nUmyj toaletę"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bathroom" />


</androidx.constraintlayout.widget.ConstraintLayout>